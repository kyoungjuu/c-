    <StackPanel>
            <Menu Background="#FF3C3C3C">
                <MenuItem Header="" VerticalAlignment="Center"
                          FontSize="20"
                          Foreground="White" Click="MenuItem_Click_1" >
                    <MenuItem.Icon>
                        <Image Source="/Resources/am.png"
                               Height="Auto" Width="25"
                               HorizontalAlignment="Center" />
                    </MenuItem.Icon>
                        <MenuItem Header="New Project" 
                                  FontSize="12" Foreground="White" 
                                  Background="#FF1F1F1F"/>
                        <MenuItem Header="Open" 
                                  FontSize="12" Foreground="White" 
                                  Background="#FF1F1F1F"/>
                        <MenuItem Header="Save" 
                                  FontSize="12" Foreground="White"
                                  Background="#FF1F1F1F"/>
                        <MenuItem Header="Save as" 
                                  FontSize="12" Foreground="White"
                                  Background="#FF1F1F1F"
                                  Click="MenuItem_Click"/>
                </MenuItem>

                <MenuItem Header="+" VerticalAlignment="Center"
                          FontSize="20" 
                          Foreground="White">
                        <MenuItem Header="Import Part" 
                                  FontSize="12" 
                                  Foreground="White"
                                  Background="#FF1F1F1F"/>
                        <MenuItem Header="Recent Parts" 
                                  FontSize="12" Foreground="White"
                                  Background="#FF1F1F1F"/>
                        <MenuItem Header="Add Cube" 
                                  FontSize="12" Foreground="White"
                                  Background="#FF1F1F1F"/>
                        <MenuItem Header="Add Cylinder" 
                                  FontSize="12" Foreground="White" 
                                  Background="#FF1F1F1F"
                                  Click="MenuItem_Click"/>
                </MenuItem>

                <MenuItem Header="" 
                          FontSize="20" 
                          Foreground="White">
                    <MenuItem.Icon>
                        <Image Source="/Resources/setting.png" 
                               Height="20" Width="20"
                               VerticalAlignment="Center" />
                    </MenuItem.Icon>
                    <MenuItem Header="Equipment" 
                              FontSize="12" Foreground="White"
                              Background="#FF1F1F1F"/>
                    <MenuItem Header="Post Processor" 
                              FontSize="12" Foreground="White"
                              Background="#FF1F1F1F"/>
                    <MenuItem Header="Add Work Frame" 
                              FontSize="12" Foreground="White"
                              Background="#FF1F1F1F"/>
                    <MenuItem Header="Add Tool Path Sequence" 
                              FontSize="12" Foreground="White" 
                              Background="#FF1F1F1F"
                              Click="MenuItem_Click"/>
                </MenuItem>



            </Menu>
    </StackPanel>
    
    
    
